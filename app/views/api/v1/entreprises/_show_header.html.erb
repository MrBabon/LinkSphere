        <%= link_to :back do %>
                <%= image_tag "chevron-left.svg", alt: "chevron", class: "w-6" %>
        <% end %>
        <h6 class="m-0 align-middle text-light-gray text-uppercase fw-semibold font-jost">Entreprise</h6>
        <%= link_to api_v1_chatrooms_path(current_user) do %>
