<% content_for :header do %>
  <%= render 'profil_header' %>
<% end %>
<div class="pt-32 bg-charcoal"></div>
<div class=" d-flex justify-content-center position-relative bottom-12">
    <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, alt: "Avatar to #{current_user.first_name}", class: "rounded-circle img-avatar w-28 h-28 border border-2 border-white shadow-sm" %>
    <% else %>    
        <%= image_tag("avatar.svg", class: "rounded-circle w-28 h-28 img-fluid border border-2 border-white shadow-sm") %>
    <% end %>
</div>
<div class="d-flex justify-content-center position-relative bottom-8">
    <div class="d-block justify-content-center">
        <h2 class="font-jost fw-medium text-silver text-center mb-1"><%= current_user.full_name %></h2>
        <div class="d-flex align-items-center gap-2 text-sm justify-content-center mb-1">
            <i class="fa-solid fa-phone text-primary"></i>
            <span class=" fw-light"><%= current_user.phone %></span>
        </div>
        <div class="d-flex align-items-center gap-2 justify-content-center mb-1">
            <i class="fa-regular fa-envelope text-primary"></i>
            <span class="fw-light"><%= current_user.email %></span>
        </div>
        <% if current_user.website.present? %>
            <div class="d-flex align-items-center gap-2 justify-content-center">
                <i class="fa-solid fa-globe text-primary"></i>            
                <span class="fw-light text-lowercase"><%= current_user.website %></span>
            </div>
        <% end %>
        <div class="d-flex justify-content-evenly align-items-center mt-1">
            <% if current_user.twitter.present? %>
                <a href="https://<%= current_user.twitter %>" target="_blank"><i class="fa-brands fa-x-twitter fa-lg text-black"></i></a>
            <% end %>
            <% if current_user.linkedin.present? %>
                <a href="https://<%= current_user.linkedin %>" target="_blank"><i class="fa-brands fa-linkedin fa-lg text-black"></i></a>               
            <% end %>
            <% if current_user.facebook.present? %>
                <a href="https://<%= current_user.facebook %>" target="_blank"><i class="fa-brands fa-facebook fa-lg text-black"></i></a>                
            <% end %>
            <% if current_user.instagram.present? %>
                <a href="https://<%= current_user.instagram %>" target="_blank"><i class="fa-brands fa-instagram fa-lg text-black"></i></a>   
            <% end %>
        </div>
    </div>
</div>
<div class="d-flex justify-content-around align-items-center">
    <% if current_user.admin %>
        <div class="d-flex justify-content-center">
            <%= link_to "Dashboard Admin", rails_admin_path, class: "px-2 mb-4 rounded fw-semibold btn btn-outline-success" %>
        </div>
    <% end %>
</div>
<div class="border border-2 border-yellow"></div>
<div class="m-3 pb-20">
    <h6 class="text-charcoal fw-semibold"><%= current_user.job %></h6>
    <% if current_user.industry.present? %>
        <p class="fw-light text-body-color"><%= current_user.industry.capitalize %></p>
    <% end %>
    <p class="text-charcoal fw-light"><%= current_user.biography %></p>
</div>
