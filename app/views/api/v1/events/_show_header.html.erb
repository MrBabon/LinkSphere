<header class="w-100 position-fixed bg-charcoal">
    <div class="d-flex w-100 justify-content-between align-items-center pt-8 pb-3 px-4 bg-charcoal">
        <%= link_to api_v1_events_path do %>
            <%= image_tag "chevron-left.svg", alt: "chevron", class: "w-6" %>
        <% end %>
        <h6 class="m-0 align-middle text-light-gray text-uppercase fw-semibold font-jost">Event</h6>
   
    <%= link_to api_v1_chatrooms_path(current_user) do %>
        <%= image_tag "envelope.svg", alt: "envelope", class: "w-7" %>
    <% end %>
    </div>
    <div class="d-flex justify-content-around bg-white px-4 py-3">
        <%= link_to api_v1_events_path, class: "text-decoration-none" do %>
            <h6 class="text-charcoal fw-semibold font-jost position-relative custom-element">All Upcoming Events</h6>
        <% end %>
        <%= link_to my_events_api_v1_user_path(current_user), class: "text-decoration-none" do %>
            <h6 class="text-charcoal fw-normal font-jost">My Events</h6>
        <% end %>
    </div>
</header>