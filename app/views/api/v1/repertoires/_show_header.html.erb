<header class="w-100 position-fixed bg-charcoal z-2">
    <div class="d-flex w-100 justify-content-between align-items-center pt-8 pb-3 px-4  bg-charcoal">
        <div data-controller="overlay" class="">
            <button class="btn-delete" data-action="click->overlay#toggle" ><%= image_tag "plus-circle.svg", alt: "plus-circle", class: "w-6" %></button>
            <div data-overlay-target="overlay" class="inset-x-0 overlay d-none position-fixed top-0 w-100 h-100 justify-content-center align-items-center text-white z-3">
                <div data-overlay-target="modal" class="d-none mx-2 position-relative w-72 h-auto justify-content-center p-4 text-center rounded-xl content-between">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <%= simple_form_for @contact_group, url: api_v1_user_repertoire_contact_groups_path(current_user), method: :post do |f| %>
                            <%= f.input :name,
                                        input_html: { value: "", class: "custom-placeholder custom-caret border-none form-control text-charcoal text-center rounded-4 px-10 py-3", placeholder: "NAME OF GROUP" },
                                        label_html: { class: "d-none"},
                                        label: '' %>
                            <%= f.button :submit, '', class: "d-none" %>
                        <% end %>
                        <button data-action="click->overlay#closeModal" class="d-flex justify-content-start btn-delete text-light-gray">
                        Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-1 text-center">
            <h6 class="m-0 text-light-gray text-uppercase fw-semibold font-jost">Groups</h6>
        </div>
        <%= link_to api_v1_chatrooms_path(current_user) do %>
            <%= image_tag "envelope.svg", alt: "envelope", class: "w-7" %>
        <% end %>
    </div>
    <div class="d-flex justify-content-around bg-white px-4 py-3 border-bottom">
        <%= link_to repertoire_api_v1_user_path(current_user), class: "text-decoration-none" do %>
            <h6 class="text-charcoal fw-semibold font-jost position-relative custom-element">My Cards</h6>
        <% end %>
        <%= link_to repertoire_api_v1_user_path(current_user), class: "text-decoration-none" do %>
            <h6 class="text-charcoal fw-normal font-jost">Entreprises</h6>
        <% end %>
    </div>
</header>